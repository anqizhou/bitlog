<!DOCTYPE html>
<html>
<head>
  <title>Bitlog</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag     '//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag     '//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css' %>
  <%= stylesheet_link_tag     '//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="top-bar"></div>
  <div class="containter">
   <!-- sidebar -->
    <div class="column col-xs-2" id="sidebar">

      <ul id="lg-menu">
        <% if user_signed_in? %>
          <li><strong><%= current_user.name %></strong></li>
          <li><%= image_tag(current_user.portrait, width: "30")%></li>
          <li id="add-button"><%= link_to("+", new_bit_url) %></li>
          <li><%= link_to("View Bitlogs", posts_url) %></li>
          <li><a href="#">Bitlog<br>Feeds</a></li>
          <li><a href="#">Settings</a></li>
          <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
        <% else %>
          <li><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %></li>
          <li><%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %></li>
        <% end %>
      </ul>
    <!-- /sidebar -->
    </div>
    <div class="column col-xs-10" id="main">
      <%= yield %>
    </div>
  </div>

  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' %>
</body>
</html>
